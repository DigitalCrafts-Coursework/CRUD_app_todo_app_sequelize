<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header>
      <h3>What to do...</h3>
    </header>
    <main>
      <div class="tasks-to-add">
        <form action="http://localhost:3000/" method="POST">
          <input type="text" name="task" id="task-input" />
          <button type="submit" value="submit">Enter task</button>
        </form>
      </div>
      <div class="to-do">
        <h3>Tasks to do</h3>
        <% tasksToDo.forEach(task => { %>
        <div>
          <form action="http://localhost:3000/delete" method="post">
            <input
              type="checkbox"
              name="id"
              id=""
              value="<%=task.id%>"
              onclick="this.form.submit();"
            />
          </form>
          <span><%- task.task %></span>
          <form action="http://localhost:3000/update" method="post">
            <input
              type="checkbox"
              name="id"
              id=""
              value="<%=task.id%>"
              onclick="this.form.submit();"
            />
          </form>
        </div>
        <% }) %>
      </div>
      <div class="completed">
        <h3>Completed tasks</h3>
        <% completedTasks.forEach(task => { %>
        <div>
          <form action="http://localhost:3000/delete" method="post">
            <input
              type="checkbox"
              name="id"
              id=""
              value="<%=task.id%>"
              onclick="this.form.submit();"
            />
          </form>
          <span><%- task.task %></span>
          <form action="http://localhost:3000/return" method="post">
            <input
              type="checkbox"
              name="id"
              id=""
              value="<%=task.id%>"
              onclick="this.form.submit();"
            />
          </form>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
